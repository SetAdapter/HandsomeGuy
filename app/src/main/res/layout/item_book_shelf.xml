<?xml version="1.0" encoding="utf-8"?>
<com.example.handsomelibrary.view.theme.ColorRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bookImg"
        android:layout_margin="@dimen/sp_12"
        android:layout_width="50dp"
        android:layout_height="70dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="@dimen/sp_12"
        android:layout_toRightOf="@+id/iv_bookImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:text="花都猎人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_brief"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/txtSecondColor"
            android:text="XXXXXXXXXXXXXXXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.example.handsomelibrary.view.theme.ColorRelativeLayout>